<h1>Volunteer for a Task</h1>
<form action="/volunteers/subscribe" method="POST">
  <input type="text" name="name" placeholder="Your name" required />
  <input type="email" name="email" placeholder="Your email" required />
  <input type="text" name="identifier" placeholder="Your unique identifier" required />
  <select name="taskId">
    <% tasks.forEach(task => { %>
      <option value="<%= task._id %>"><%= task.title %></option>
    <% }) %>
  </select>
  <button type="submit">Subscribe</button>
</form>